@if (!Disabled)
{
    <button @onclick="ClickHandler" class="flex bg-@ColourStyle-400 hover:bg-@ColourStyle-600 rounded-lg font-bold text-@TextColourStyle text-center mr-6 m-2 px-2 py-1 ease-in-out transition duration-300">@ChildContent</button>
}
else
{
    <button class="flex bg-gray-600 rounded-lg font-bold text-white text-center m-2 px-2 py-1 mr-6">@ChildContent</button>
}

@code {
    [Parameter]
    public EventCallback ClickHandler { get; set; }

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string ColourStyle { get; set; } = "blue";

    [Parameter]
    public string TextColourStyle { get; set; } = "white";

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}